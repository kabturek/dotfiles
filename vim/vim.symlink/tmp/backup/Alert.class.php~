class Alert extends BaseAlert
{
  public static function send($recipient_id, $employee_id, $title, $text){
    $alert = new Alert();
    $alert->employee_id = $employee_id;
    $alert->recipient_id = $recipient_id;
    $alert->title = $title;
    $alert->text = $text;
    return $alert->save();
  }
  public static function sendOffice($employee_id, $title, $text){
    return Alert::send(null, $employee_id, $title, $text);
  }
}
