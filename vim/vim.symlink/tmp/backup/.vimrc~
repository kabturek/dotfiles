" pathogen
call pathogen#runtime_append_all_bundles()
call pathogen#helptags()

" indents
filetype plugin on
filetype indent on

" its 2010 after all
set nocompatible

"use modlines in files ?
set modelines=0

" tab = 2 spaces
" http://vimcasts.org/episodes/tabs-and-spaces/
set tabstop=2
set shiftwidth=2
set softtabstop=2
set expandtab

" moving between tabs with alt+h/l
map <silent><A-k> :tabnext<CR>
map <silent><A-j> :tabprevious<CR>
map <leader>t :tabedit 

"moving between buffers
map <C-Tab> :bnext<cr>
map <C-S-Tab> :bprevious<cr>

"Change buffer - without saving
set hid

"set iskeyword+=_,$,@,%,# " none of these are word dividers
"TEST: _ is a word divider ( good for vars like "is_in_cooperation"
set iskeyword-=_

" no error indicators/blinking lights etc
set noerrorbells
set novisualbell
set t_vb=

"some standard settings
set encoding=utf-8
set scrolloff=3
set autoindent
set showmode
set showcmd
set hidden
set wildmenu
set wildmode=longest,list:longest,full
set visualbell
set ttyfast
set ruler
set backspace=indent,eol,start
"set laststatus=2
" vim 7.3
" relative numbers on left
"set relativenumber
set number
"set undofile

" Backups
set nobackup                        " enable backups
set noswapfile                  " tired of the swap files


" leader
let mapleader = ","

"searching 

" ignores case only when search string all lowercase
set ignorecase
set smartcase
" /g is default
set gdefault
" show results while typing
set incsearch
set showmatch
set hlsearch
" clear search
nnoremap <leader><space> :noh<cr>
" make tab key more better
" breakes snipmate
"noremap <tab> v>
"noremap <s-tab> v<
"vnoremap <tab> >gv
"vnoremap <s-tab> <gv

" long lines handling
set wrap
set textwidth=79
set formatoptions=qrn1
if version > 702
  set colorcolumn=85
endif
set cursorline
set showbreak=â†ª


"turn off arrows
"nnoremap <up> <nop>
"nnoremap <down> <nop>
"nnoremap <left> <nop>
"nnoremap <right> <nop>
"inoremap <up> <nop>
"inoremap <down> <nop>
"inoremap <left> <nop>
"inoremap <right> <nop>
nnoremap j gj
nnoremap k gk

" map f1 to esc
inoremap <F1> <ESC>
nnoremap <F1> <ESC>
vnoremap <F1> <ESC>

" maps ; to :
nnoremap ; :

" when loosing focus - save
au FocusLost * :wa

" TEST: jj -> ESC
inoremap jj <ESC>
" SPLIT WINDOWS
" open a split window and switch to it
nnoremap <leader>w <C-w>v<C-w>l

" ctrl +hjkl moves around windows in vim
nnoremap <C-h> <C-w>h
nnoremap <C-j> <C-w>j
nnoremap <C-k> <C-w>k
nnoremap <C-l> <C-w>l

" Rainbows!
"nmap <leader>R :RainbowParenthesesToggle<CR>

"command-T becomes commandG
nmap <silent> <Leader>g :CommandT<CR>
let g:CommandTMaxFiles=30000


" Sudo to write
cmap w!! w !sudo tee % >/dev/null

" Yankring
nnoremap <silent> <F3> :YRShow<cr>
nnoremap <silent> <leader>y :YRShow<cr>

" Exuberant ctags!
map <F4> :TagbarToggle<cr>
map <F2> :!/usr/bin/ctags -R --c++-kinds=+p --fields=+iaS --extra=+q  .<cr>
nnoremap <F7> :GundoToggle<CR>

" NERDTree
let g:NERDTreeMapActivateNode = "o"
let g:NERDTreeMapCloseDir = "h"
nnoremap <silent> <F6> :NERDTreeToggle<cr>

"Remove the Windows ^M
noremap <Leader>m mmHmt:%s/<C-V><cr>//ge<cr>'tzt'm

" Color scheme (terminal)
syntax on
set t_Co=256

set background=dark
let g:solarized_contrast='high'
let g:solarized_termcolors=256
colorscheme molokai
"colorscheme  solarized 

"autocomplete 
inoremap <Nul> <C-x><C-o>
setlocal omnifunc=ccomplete#Complete
"file types
autocmd FileType ruby,eruby set omnifunc=rubycomplete#Complete
autocmd FileType ruby,eruby let g:rubycomplete_buffer_loading = 1
autocmd FileType ruby,eruby let g:rubycomplete_rails = 1
autocmd FileType ruby,eruby let g:rubycomplete_classes_in_global = 1
au BufRead,BufNewFile *.scss set filetype=scss
autocmd FileType javascript setlocal omnifunc=javascriptcomplete#CompleteJS
autocmd FileType css setlocal omnifunc=csscomplete#CompleteCSS
autocmd FileType html setlocal omnifunc=htmlcomplete#CompleteTags
autocmd FileType xml setlocal omnifunc=xmlcomplete#CompleteTags
autocmd FileType php setlocal omnifunc=phpcomplete#CompletePHP
autocmd FileType python setlocal omnifunc=pythoncomplete#Complete

"improve autocomplete menu color
"highlight Pmenu ctermbg=238 gui=bold

" completition on ^space
inoremap <expr> <C-Space> pumvisible() \|\| &omnifunc == '' ?
\ "\<lt>C-n>" :
\ "\<lt>C-x>\<lt>C-o><c-r>=pumvisible() ?" .
\ "\"\\<lt>c-n>\\<lt>c-p>\\<lt>c-n>\" :" .
\ "\" \\<lt>bs>\\<lt>C-n>\"\<CR>"
imap <C-@> <C-Space>

"LATEX

" IMPORTANT: grep will sometimes skip displaying the file name if you
" " search in a singe file. This will confuse Latex-Suite. Set your grep
" " program to always generate a file-name.
set grepprg=grep\ -nH\ $*

" OPTIONAL: Starting with Vim 7, the filetype of empty .tex files defaults to
" " 'plaintex' instead of 'tex', which results in vim-latex not being loaded.
" " The following changes the default filetype back to 'tex':
let g:tex_flavor='latex'

"ARDUINO
autocmd! BufNewFile,BufRead *.pde setlocal ft=arduino
autocmd Filetype arduino set errorformat^=\%-G%.%#/home/kabturek/apps/arduino/%.%#

" Add this type definition to your vimrc
" or do
" coffeetags vim_conf >> <PATH TO YOUR VIMRC>
 let g:tagbar_type_coffee = {
  \ 'kinds' : [
  \   'f:functions',
  \   'o:object'
  \ ],
  \ 'kind2scope' : {
  \  'f' : 'object',
  \   'o' : 'object'
  \},
  \ 'sro' : ".",
  \ 'ctagsbin' : 'coffeetags',
  \ 'ctagsargs' : '',
  \}


"fugitive integration
let g:statline_fugitive = 1
let g:statline_rvm = 1
let g:statline_show_charcode = 1

" syntastic
let g:syntastic_auto_loc_lis=1
let g:syntastic_enable_signs=1

" indent guides
let g:indent_guides_auto_colors = 1
let g:indent_guides_auto_colors = 0
hi IndentGuidesOdd  ctermbg=black
hi IndentGuidesEven ctermbg=black
let g:indent_guides_start_level=2
let g:indent_guides_guide_size=1

" Tagbar
noremap <leader>o :TagbarToggle<CR>
" Nerdtree
noremap <Leader>n :NERDTreeToggle<CR>
let NERDTreeMinimalUI=1
let NERDTreeDirArrows=1

" Bubble single lines
nmap <C-Up> ddkP
nmap <C-Down> ddp
" Bubble multiple lines
vmap <C-Up> xkP`[V`]
vmap <C-Down> xp`[V`]

