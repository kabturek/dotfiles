    public function getTestsForStage($stage, $category_id = null){
      $q = $this->createQuery()
        ->from('Inquiry i')
        ->where('i.stage = ?', $stage);
      if($category_id !== null){
        $q->leftJoin('i.InquiryCategory ic');
        $q->andWhere('(ic.category_id = ? OR i.category_id IS NULL)', $category_id);
